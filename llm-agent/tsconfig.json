{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@test/*": ["../test/*"]
    },
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
